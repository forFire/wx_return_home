.flex-wrp {
  display: flex;
}


.content {
   width: 95%;
   position: relative;
   vertical-align: middle;
   display: flex;
   margin:0 auto
}

.bc_green {
  width: 50%;
  height: 40px;
}

.bc_red {
  width: 50%;
  height: 40px;
}

.rich-text {
  width: 700rpx;
  padding: 25rpx 0;
}

.rich-text-wrp {
  padding: 0 25rpx;
  background-color: #fff;
}

.page-section {
  width: 100%;
  margin-bottom: 60rpx;
}

.page-section:last-child {
  margin-bottom: 0;
}

.page-section-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.label-1 {
  margin-bottom: 15px;
  position: relative;
  width: 80%;
  background: #fff;
}

.label-1__text {
  display: inline-block;
  vertical-align: middle;
  font-size: 15px;
}

.post {
  float: right;
  background-color: #fff;
  position: fixed;
  bottom: 80px;
  right: 150px;
  border: 0 solid #fff;
  border-radius: 500px;
  box-shadow: 4px 1px 1px #ccc;
}

.add_icon {
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 40px;
  right: 150px;
  border: 0 solid #fff;
  border-radius: 500px;
  box-shadow: 4px 1px 1px #ccc;
  width: 50px;
  height: 50px;
}

.left {
  width: 100%;
  height: 250rpx;
  line-height: 80rpx;
  font-size: 40rpx;
}

.right {
  width: 40%;
  height: 80rpx;
  float: right;
  text-align: left;
  line-height: 80rpx;
}

.left-left {
  width: 50%;
  float: left;
  text-align: left;
  height: 121rpx;
  font-size: 15px;
}

.label_line {
  width: 10%;
  float: left;
  text-align: left;
  height: 120rpx;
}

.left-right {
  width: 50%;
  float: right;
  height: 120rpx;
  font-size: 15px;
}

.left-data {
  width: 60%;
  float: left;
  text-align: left;
  height: 70rpx;
  font-size: 15px;
}
.searchButton{
  width: 26%;
  text-align: center;
  height: 80rpx;
  font-size: 15px;
}
.telButton {
  width: 48%;
  text-align: center;
  height: 80rpx;
  font-size: 15px;
}
.label-1__tel {
  width: 70%;
  display: inline-block;
  vertical-align: middle;
}
.scroll-view-item {
   width: 90%;
   position: relative;
   vertical-align: middle;
   display: flex;
  height: 100px;
  margin:0 auto
}

.picker {
  /* width: 50%; */
  text-align: left;
  height: 50rpx;
  padding: 10px;
  background-color: #fff;
}
